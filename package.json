{
	"name": "vscode-abaplint",
	"displayName": "abaplint",
	"description": "abaplint",
	"author": "Lars Hvam",
	"license": "MIT",
	"version": "0.2.12",
	"repository": {
		"type": "git",
		"url": "https://github.com/abaplint/vscode-abaplint"
	},
	"publisher": "larshp",
	"keywords": [
		"abap"
	],
	"categories": [
		"Linters"
	],
	"engines": {
		"vscode": "^1.20.1"
	},
	"activationEvents": [
		"onLanguage:abap"
	],
	"icon": "img/abaplint_icon.png",
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "abaplint Configuration",
			"properties": {
				"abaplint.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"abaplint.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"tslint": "tslint -c tslint.json 'client/src/**/*.ts' 'server/src/**/*.ts'",
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run compile",
		"compile:client": "tsc -p ./client/tsconfig.json",
		"compile:server": "tsc -p ./server/tsconfig.json",
		"watch:client": "tsc -w -p ./client/tsconfig.json",
		"watch:server": "tsc -w -p ./server/tsconfig.json",
		"compile": "npm run compile:client && npm run compile:server",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"extensionDependencies": [
		"larshp.vscode-abap"
	],
	"devDependencies": {
		"@types/mocha": "^5.2.5",
		"@types/node": "^10.12.18",
		"tslint": "^5.12.0",
		"tslint-eslint-rules": "^5.4.0",
		"typescript": "^3.2.2"
	}
}
